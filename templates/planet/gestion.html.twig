{% extends 'base.html.twig' %} {% block title %}Gestion{%
endblock %} {% block body %}
<section>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>

        <th scope="col">Nom</th>
        <th scope="col">Superfice / Diamètre</th>
        <th scope="col">Type / Planète</th>
        <th scope="col">Photo</th>
        <th scope="col">Supprimer</th>
        <th scope="col">Modifier</th>
      </tr>
    </thead>

    <tbody>
      {% for planets in planets %}
      <tr>
        <td scop="row">{{ planets.id }}</td>
        <td>{{ planets.nom }}</td>
        <td>{{ planets.superficie }}</td>
        <td>{{ planets.type }}</td>

        <td>
          <img style="width: 120px; height:120px" src="{{ planets.photo }}" />
        </td>

         <td>
          <a
            class="btn btn-danger"
            href="{{ path('app_admin_delete_planet', { id: planets.id }) }}"
            >Supprimer</a
          >
        </td>

        <td>
          <a
            class="btn btn-success"
            href="{{ path('app_admin_edit_planet', { id: planets.id }) }}"
            >Modifier</a
          >
        </td>
      </tr>
      {% endfor %}

      {% for satellite in satellite %}
      <tr>
        <td scop="row">{{ satellite.id }}</td>
        <td>{{ satellite.nom }}</td>
        <td>{{ satellite.superficie }}</td>
        <td>{{ satellite.planete }}</td>

        <td>
          <img style="width: 120px; height:120px" src="{{ satellite.photo }}" />
        </td>

        <td>
          <a
            class="btn btn-danger"
            href="{{ path('app_admin_delete_satellite', { id: satellite.id }) }}"
            >Supprimer</a
          >
        </td>

        <td>
          <a
            class="btn btn-success"
            href="{{ path('app_admin_edit_satellite', { id: satellite.id }) }}"
            >Modifier</a
          >
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
{% endblock %}